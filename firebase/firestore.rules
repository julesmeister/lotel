      allow write: if false;
      allow delete: if false;
    }

    match /payrolls/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /payrolls/{parent}/salaries/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /{path=**}/salaries/{document} {
      allow read: if true;
    }


    match /staffs/{document} {
      allow create: if true;
